<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/win_main_bg"
    tools:context="com.win.winfertility.Notifications">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/relativeLayout2">
        <com.win.winfertility.tools.HomeActionBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.win.winfertility.tools.HomeActionBar>
        <TextView
            style="@style/WinTitleRedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Notifications"
            android:textColor="@color/WinBlueColor"
            android:textSize="15dp"
            android:padding="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>
    </RelativeLayout>
    <include android:id="@+id/vw_graph_dialog"
        android:visibility="gone"
        layout="@layout/view_popup_graph"/>
    <include android:id="@+id/vw_contact_employer_dialog"
        android:visibility="gone"
        layout="@layout/view_popup_contact_employer"/>
    <include android:id="@+id/vw_richtext_input_dialog"
        android:visibility="gone"
        layout="@layout/view_popup_feedback"/>
    <include android:id="@+id/vw_turnoff_notification_dialog"
        android:visibility="gone"
        layout="@layout/view_popup_turnoff_notifiation"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_below="@+id/relativeLayout2"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view"
            android:background="@color/skyBlue"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />
        <TextView
            style="@style/WinBoldTextStyle"
            android:layout_below="@+id/view"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:text="Notifications"/>
        <ToggleButton
            android:focusable="false"
            android:clickable="false"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/tb_notification"
            android:layout_marginRight="15dp"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/draw_blue_toggle_button"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/skyBlue"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tb_notification"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

    </RelativeLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:id="@+id/notification_list"
        android:layout_below="@+id/linearlayout"
        android:layout_marginTop="10dp"></ListView>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:background="@drawable/draw_btn_blue"
        android:layout_marginBottom="20dp"
        android:id="@+id/dismiss"
        android:textColor="@color/WinBlueColor"
        android:layout_alignParentBottom="true"
        android:text="DISMISS"/>
</RelativeLayout>
