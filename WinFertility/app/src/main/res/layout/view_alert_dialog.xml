<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40000000"
    android:clickable="false"
    android:focusable="false">
    <RelativeLayout
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_margin="10dp">
            <View android:layout_width="match_parent" android:layout_height="36dp" android:background="@color/WinLightRedColor"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:text="WINFertility"
                        android:textColor="@color/WinRedColor"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <View style="@style/WinDividerLargeStyle"/>
                <TextView
                    android:id="@+id/vw_text"
                    style="@style/WinTextStyle"
                    android:textAlignment="center"
                    android:text="Message.."/>
                <View style="@style/WinDividerLargeStyle"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp">
                    <Button
                        android:id="@+id/btn_positive"
                        style="@style/WinRedButtonStyle"
                        android:text="Ok"
                        android:layout_width="100dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_margin="5dp"/>
                    <Button
                        android:id="@+id/btn_negative"
                        style="@style/WinRedButtonStyle"
                        android:text="Cancel"
                        android:layout_width="100dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_margin="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:background="@drawable/draw_white_round"
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/win_close"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>