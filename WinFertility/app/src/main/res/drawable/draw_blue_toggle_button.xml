<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp"/>
                    <size android:height="20dp" android:width="40dp"/>
                    <solid android:color="#1ABDD4"/>
                    <stroke android:width="1px" android:color="#1ABDD4"/>
                </shape>
            </item>
            <item android:top="2dp" android:bottom="2dp" android:left="18dp" android:right="2dp">
                <shape android:shape="rectangle">
                    <corners android:radius="10dp"/>
                    <size android:height="16dp" android:width="20dp"/>
                    <solid android:color="#FFFFFF"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="10dp"/>
                    <size android:height="20dp" android:width="40dp"/>
                    <solid android:color="#FFF"/>
                    <stroke android:width="1px" android:color="#AAA"/>
                </shape>
            </item>
            <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="18dp">
                <shape android:shape="rectangle">
                    <corners android:radius="10dp"/>
                    <size android:height="16dp" android:width="20dp"/>
                    <solid android:color="#CCC"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>