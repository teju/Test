<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <size android:height="20dp" android:width="20dp"/>
            <stroke android:color="@color/WinRedColor" android:width="2dp"/>
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <size android:height="20dp" android:width="20dp"/>
                    <solid android:color="@color/WinRedColor"/>
                </shape>
            </item>
            <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
                <shape android:shape="oval">
                    <stroke android:color="#FFFFFF" android:width="3dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>