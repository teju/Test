<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_my_fertility"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.win.winfertility.MyFertilityActivity">
    <include layout="@layout/view_main_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <com.win.winfertility.tools.HomeActionBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.win.winfertility.tools.HomeActionBar>
                <TextView
                    style="@style/WinTitleRedStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="My Fertility"
                    android:textColor="@color/WinDarkRedColor"
                    android:textSize="15dp"
                    android:padding="0dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#30000000"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="45dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.win.winfertility.tools.CalendarViewFlipper
                        android:id="@+id/vw_flipper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.win.winfertility.tools.WinCalendarView
                            android:id="@+id/vw_calendar_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </com.win.winfertility.tools.WinCalendarView>
                        <com.win.winfertility.tools.WinCalendarView
                            android:id="@+id/vw_calendar_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </com.win.winfertility.tools.WinCalendarView>
                    </com.win.winfertility.tools.CalendarViewFlipper>
                    <TextView
                        style="@style/WinLabelStyle"
                        android:paddingTop="10dp"
                        android:paddingBottom="15dp"
                        android:text="Based on your inputs:"
                        android:gravity="center"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                style="@style/WinTextStyle"
                                android:gravity="center"
                                android:text="Your Ovulation\nWindow Starts in:"/>
                            <TextView
                                android:id="@+id/vw_ovulation_countdown"
                                android:background="@drawable/draw_calendar_cell_dashed"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:text=""
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textSize="14dp"
                                android:textColor="#666"
                                android:textStyle="bold"
                                android:layout_margin="4dp"/>
                            <TextView
                                style="@style/WinBoldTextStyle"
                                android:text="Days"
                                android:gravity="center"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:src="@drawable/win_cycle_data">
                        </ImageView>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                style="@style/WinTextStyle"
                                android:gravity="center"
                                android:text="Your Period\nShould Start in:"/>
                            <TextView
                                android:id="@+id/vw_period_countdown"
                                android:background="@drawable/draw_calendar_cell_dotted"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:text=""
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textSize="14dp"
                                android:textColor="#666"
                                android:textStyle="bold"
                                android:layout_margin="4dp"/>
                            <TextView
                                style="@style/WinBoldTextStyle"
                                android:text="Days"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/lnk_update_menstrual_data"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/WinDarkRedColor"
        android:layout_alignParentBottom="true"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:text="UPDATE CYCLE DATA"/>
    <include
        android:id="@+id/vw_overlay"
        android:visibility="gone"
        layout="@layout/view_calendar_data_popup"/>
</RelativeLayout>
