<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/editbox_background_normal"
    android:layout_marginTop="4dp"
    android:padding="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">
    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Booking No.         :"
        android:padding="5dp"
        android:textSize="@dimen/normal"
        android:textColor="@color/black"
        android:id="@+id/booking_id_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BK0000020"
        android:textStyle="bold"
        android:textSize="@dimen/normal"
        android:padding="5dp"
        android:layout_toRightOf="@+id/booking_id_text"
        android:id="@+id/booking_id"/>
    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Customer Name :"
        android:padding="5dp"
        android:textSize="@dimen/normal"
        android:textColor="@color/black"
        android:id="@+id/customer_name_text"
        android:layout_below="@+id/booking_id_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uma Bkakuni"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="@dimen/normal"
        android:layout_toRightOf="@+id/customer_name_text"
        android:layout_below="@+id/booking_id_text"
        android:id="@+id/customer_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="445155555555"
        android:padding="5dp"
        android:textStyle="bold"
        android:textSize="@dimen/normal"
        android:layout_toRightOf="@+id/customer_name_text"
        android:layout_below="@+id/customer_name_text"
        android:id="@+id/customer_number"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Vehicle No           : "
        android:textSize="@dimen/normal"
        android:layout_below="@+id/customer_number_text"
        android:textColor="@color/black"
        android:padding="5dp"
        android:id="@+id/vehicle_no_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_below="@+id/customer_number_text"
        android:layout_toRightOf="@+id/vehicle_no_text"
        android:text="KA 0458 555"
        android:textStyle="bold"
        android:textSize="@dimen/normal"
        android:id="@+id/vehicle_no"/>
    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="OTP                       : "
        android:padding="5dp"
        android:textSize="@dimen/normal"
        android:textColor="@color/black"
        android:id="@+id/otp_text"
        android:layout_below="@+id/vehicle_no_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vehicle_no_text"
        android:text="7869325"
        android:textStyle="bold"
        android:padding="5dp"
        android:layout_toRightOf="@+id/otp_text"
        android:textSize="@dimen/normal"
        android:textAllCaps="true"
        android:id="@+id/otp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/map"
        android:text="Track Route"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:background="#269ed4"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/map_marker"
        android:drawablePadding="5dp"
        android:textColor="@color/white"
        android:layout_below="@+id/otp_text"/>

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Customer No.     :"
        android:padding="5dp"
        android:textSize="@dimen/normal"
        android:textColor="@color/black"
        android:id="@+id/customer_number_text"
        android:layout_below="@+id/customer_name_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>