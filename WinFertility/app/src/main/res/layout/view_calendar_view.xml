<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <TextView
        android:id="@+id/vw_month_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="@color/WinDarkRedColor"
        android:gravity="center"
        android:textSize="16dp"
        android:padding="0dp"
        android:text="July 2017"/>
    <View android:layout_width="match_parent" android:background="#DDDDDD" android:layout_height="1px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:weightSum="7">
        <TextView style="@style/WinCalendarHeaderStyle" android:text="S"/>
        <TextView style="@style/WinCalendarHeaderStyle" android:text="M"/>
        <TextView style="@style/WinCalendarHeaderStyle" android:text="T"/>
        <TextView style="@style/WinCalendarHeaderStyle" android:text="W"/>
        <TextView style="@style/WinCalendarHeaderStyle" android:text="T"/>
        <TextView style="@style/WinCalendarHeaderStyle" android:text="F"/>
        <TextView style="@style/WinCalendarHeaderStyle" android:text="S"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:background="#DDDDDD" android:layout_height="1px"/>
    <GridView
        android:scrollbars="none"
        android:horizontalSpacing="0dp"
        android:verticalSpacing="0dp"
        android:id="@+id/grd_day_cells"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchMode="columnWidth"
        android:numColumns="7"/>
</LinearLayout>