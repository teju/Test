<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_startup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.win.winfertility.LandingActivity"
    android:background="#FFFFFF"
    android:keepScreenOn="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.win.winfertility.tools.LogoActionBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hide_back="true">
        </com.win.winfertility.tools.LogoActionBar>
        <TextView style="@style/WinHeaderStyle"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/win_landing_bg"
            android:scaleType="centerCrop"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_create_account"
            style="@style/WinRedButtonStyle"
            android:layout_width="250dp"
            android:text="Create An Account"/>
        <View style="@style/WinDividerLargeStyle"/>
        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="250dp"
            style="@style/WinVioletButtonStyle"
            android:text="Sign In"/>
    </LinearLayout>
</RelativeLayout>
