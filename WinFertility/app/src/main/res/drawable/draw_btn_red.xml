<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:color="@color/WinRedColor" android:width="1dp"/>
            <solid android:color="@color/WinLightBGColor"/>
            <padding android:bottom="6dp" android:left="30dp" android:right="30dp" android:top="6dp"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/WinRedColor" android:width="1dp"/>
            <solid android:color="@color/WinLightRedColor"/>
            <padding android:bottom="6dp" android:left="30dp" android:right="30dp" android:top="6dp"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>