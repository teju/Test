<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">
    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Booking No  :         "
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:textSize="@dimen/normal"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/Payment_id_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="@dimen/normal"
        android:paddingBottom="4dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/Payment_id_text"
        android:id="@+id/Payment_id"/>
    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Customer Name  :     "
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textStyle="bold"
        android:textSize="@dimen/normal"
        android:textColor="@color/black"
        android:id="@+id/vendor_name_text"
        android:layout_below="@+id/Payment_id_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tejaswini"
        android:paddingBottom="4dp"
        android:textSize="@dimen/normal"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/vendor_name_text"
        android:layout_below="@+id/Payment_id_text"
        android:id="@+id/vendor_name"/>
    <TextView
        android:layout_width="140dp"
        android:paddingBottom="4dp"
        android:layout_height="wrap_content"
        android:text="Customer No.  :  "
        android:textStyle="bold"
        android:layout_below="@+id/vendor_name_text"
        android:textSize="@dimen/normal"
        android:textColor="@color/black"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:id="@+id/vendor_number_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:layout_below="@+id/vendor_name_text"
        android:layout_toRightOf="@+id/vendor_number_text"
        android:textSize="@dimen/normal"
        android:textColor="@color/black"
        android:id="@+id/vendor_number"/>
    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Vehicle No. :           "
        android:paddingBottom="4dp"
        android:textStyle="bold"
        android:textSize="@dimen/normal"
        android:layout_below="@+id/vendor_number_text"
        android:textColor="@color/black"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:id="@+id/amount_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:layout_below="@+id/vendor_number_text"
        android:layout_toRightOf="@+id/amount_text"
        android:text="ka oh 1234"
        android:textSize="@dimen/normal"
        android:textColor="@color/black"
        android:id="@+id/vehicle_no"/>
    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:padding="10dp"
        android:background="@drawable/text_border"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/vehicle_no"
        android:text="Accepted"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/status"></View>
</RelativeLayout>