<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="8dp"
    android:gravity="center_horizontal"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:padding="10dp">
    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Booking No.         :"
        android:padding="5dp"
        android:textSize="@dimen/normal"
        android:textColor="@color/black"
        android:id="@+id/Payment_id_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="@dimen/normal"
        android:padding="5dp"
        android:layout_marginLeft="4dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/Payment_id_text"
        android:id="@+id/Payment_id"/>
    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Customer Name  :"
        android:padding="5dp"
        android:textSize="@dimen/normal"
        android:textColor="@color/black"
        android:id="@+id/vendor_name_text"
        android:layout_below="@+id/Payment_id_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tejaswini"
        android:padding="5dp"
        android:layout_marginLeft="4dp"
        android:textSize="@dimen/normal"
        android:textStyle="bold"
        android:id="@+id/vendor_name"
        android:layout_alignBaseline="@+id/vendor_name_text"
        android:layout_alignBottom="@+id/vendor_name_text"
        android:layout_toRightOf="@+id/vendor_name_text"
        android:layout_toEndOf="@+id/vendor_name_text" />
    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Customer No.      :"
        android:layout_below="@+id/vendor_name_text"
        android:textSize="@dimen/normal"
        android:textColor="@color/black"
        android:padding="5dp"
        android:id="@+id/vendor_number_text"
        android:layout_alignBottom="@+id/vendor_number" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Vehicle No.           :"
        android:padding="5dp"
        android:textSize="@dimen/normal"
        android:layout_below="@+id/vendor_number_text"
        android:textColor="@color/black"
        android:id="@+id/amount_text"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:layout_below="@+id/vendor_number_text"
        android:layout_toRightOf="@+id/amount_text"
        android:text="ka oh 1234"
        android:layout_marginLeft="4dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:id="@+id/vehicle_no"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="7894561230"
        android:textSize="@dimen/normal"
        android:textStyle="bold"
        android:id="@+id/vendor_number"
        android:layout_below="@+id/vendor_name"
        android:layout_alignLeft="@+id/vendor_name"
        android:layout_alignStart="@+id/vendor_name" />
  <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:padding="10dp"
        android:background="@color/green"
        android:layout_marginTop="10dp"
        android:drawablePadding="4dp"
        android:drawableRight="@android:drawable/arrow_down_float"
        android:layout_below="@+id/vehicle_no"
        android:text="COMPLETED"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/status"></View>
</RelativeLayout>